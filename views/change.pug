extends layout

block content

  head
    link#bootstrap-css(href='//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css' rel='stylesheet')
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    // ---- Include the above in your HEAD tag --------
  body
    #register
      h3.text-center.text-white.pt-5 Login form
      .container
        #login-row.row.justify-content-center.align-items-center
          #login-column.col-md-6
            #login-box.col-md-12
              form#login-form.form(action='/changepassword' method='post')
                h3.text-center.text-info Please enter current and new password
                .form-group
                  label.text-info(for='password) current password:
                  br
                  input#username.form-control(type='password' name='lastPassword')
                .form-group
                  label.text-info(for='password') Password:
                  br
                  input#password.form-control(type='password' name='newPassword')
                .form-group
                  label.text-info(for='confirmPassword') Confirm Password:
                  br
                  input#password.form-control(type='password' name='confirmPassword')
                  br
                input.btn.btn-info.btn-md(type='submit' name='submit' value='change password')
                if errors
                  each error in errors
                    p= error.msg