extends layout

block content
    h1= title
    p welcome to #{title}

    
    form(action="/login", method="post")
        div
            label(for="username") Username 
            input#username(type="text", name="username")
        div
            label(for="password") Password 
            input#password(type="password", name="password")
        button(type="submit") Login
        if msg
            p= msg

    if logout
        button= logout
    